<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layouth"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_hibrido"
            android:layout_width="wrap_content"
            android:onClick="cambiarHibrido"
            android:layout_height="wrap_content"
            android:text="Hibrido" />

        <Button
            android:id="@+id/btn_satelite"
            android:layout_width="wrap_content"
            android:onClick="cambiarSatelite"
            android:layout_height="match_parent"
            android:text="Satelite" />

        <Button
            android:id="@+id/btn_Terreno"
            android:layout_width="wrap_content"
            android:onClick="cambiarTerreno"
            android:layout_height="wrap_content"
            android:text="Terrreno" />

        <Button
            android:id="@+id/brn_Normal"
            android:layout_width="wrap_content"
            android:onClick="cambiarNormal"
            android:layout_height="wrap_content"
            android:text="Normal" />
    </LinearLayout>


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivityTipos" />

</LinearLayout>

